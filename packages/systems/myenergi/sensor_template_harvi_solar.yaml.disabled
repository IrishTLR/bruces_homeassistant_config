sensor:
  - platform: template
    sensors:
      harvi_solar:
        friendly_name_template: 'Harvi - Solar'
        availability_template: "{{ states('sensor.harvi') }}"     
        value_template: "{% if state_attr('sensor.harvi','ectp2') | float > 100.0  %}{{ ((state_attr('sensor.harvi','ectp2') | float ) / 1000) | round(1) }}{% else %}{{0.0 | float}}{% endif %}"
        unit_of_measurement: 'kW'
        icon_template: mdi:solar-power
        device_class: power
