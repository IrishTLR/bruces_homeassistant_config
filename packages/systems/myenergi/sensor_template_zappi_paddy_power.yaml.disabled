sensor:
  - platform: template
    sensors:
      zappi_paddy_power:
        friendly_name: 'Zappi Paddy - Power'
        availability_template: "{{ states('sensor.zappi_paddy') }}"                
        value_template: "{% if state_attr('sensor.zappi_paddy','div') | float > 0.0 %}{{ (state_attr('sensor.zappi_paddy','div') / 1000 ) | round(2) }}{% else %}0.0{% endif %}"
        unit_of_measurement: kW
        device_class: power        
        icon_template: mdi:ev-station
