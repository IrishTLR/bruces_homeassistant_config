sensor:
  - platform: template
    sensors:
      zappi_paddy_mode:
        friendly_name_template: 'Zappi Paddy Mode'
        availability_template: "{{ states('sensor.zappi_paddy') }}"                
        value_template: >
          {% if states('sensor.zappi_paddy') == Unavailable %}Unavailable{% 
          else %}{% set mapper = {0:'zero',1:'Fast',2:'Eco',3:'Eco+',4:'Stopped'}%}
          {{mapper[state_attr('sensor.zappi_paddy','zmo')] }}{% endif %}