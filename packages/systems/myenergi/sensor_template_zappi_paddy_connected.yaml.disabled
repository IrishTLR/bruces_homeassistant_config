sensor:
  - platform: template
    sensors:
      zappi_paddy_connected:
        friendly_name: 'Zappi Paddy - Connected'
        availability_template: "{{ states('sensor.zappi_paddy') }}"                
        value_template: "{% if state_attr('sensor.zappi_paddy','pst') == 'A' %}off{% else %}on{% endif %}"
        icon_template: "{% if state_attr('sensor.zappi_paddy','pst') == 'A' %}mdi:power-plug-off{% else %}mdi:power-plug{% endif %}"      
