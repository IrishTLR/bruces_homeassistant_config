automation:
  - id: turn_on_bedhead_lights_with_dimmer
    alias: Turn on Bedhead lights with dimmer
    mode: restart
    trigger:
      - platform: device
        device_id: !secret hue_dimmer_device_id_sophies_bedroom
        domain: hue
        type: remote_button_long_release
        subtype: turn_on
    action:
      - service: switch.turn_on
        entity_id: switch.sophie_bedhead
        