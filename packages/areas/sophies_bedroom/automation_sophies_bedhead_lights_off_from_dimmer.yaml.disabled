automation:
  - id: turn_off_bedhead_lights_with_dimmer
    alias: Turn off Bedhead lights with dimmer
    mode: restart
    trigger:
      - platform: device
        device_id: !secret hue_dimmer_device_id_sophies_bedroom
        domain: hue
        type: remote_button_long_release
        subtype: turn_off
    action:
      - service: switch.turn_off
        entity_id: switch.sophie_bedhead